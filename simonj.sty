% we use the file name for the label as well
\newcommand{\schema}[2]%
{%
\begin{figure}[h]%
    \centering%
    \illustrationKeepDim{#1}%
    \caption{#2 \label{#1}}%
\end{figure}%
}
% we use the file name for the label as well
% 1,2 : label name and caption
% 3,4 : label/image and caption
% 5,6 : idem
\newcommand{\biSchema}[6]%
{%
\begin{figure}[h]%
    \centering%
    \begin{subfigure}[b]{0.45\textwidth}
        \centering
        \illustrationKeepDim{#3}
        \caption{#4 \label{#3}}
    \end{subfigure}
    \begin{subfigure}[b]{0.45\textwidth}
        \centering
        \illustrationKeepDim{#5}
        \caption{#6 \label{#5}}
    \end{subfigure}
    \caption{#2 \label{#1}}%
\end{figure}%
}

\newcommand{\tikzSchema}[3]%
{%
\begin{figure}[h]%
    \centering%
    \resizebox {\columnwidth} {!}{#1}%
    \caption{#3 \label{#2}}%
\end{figure}%
}

